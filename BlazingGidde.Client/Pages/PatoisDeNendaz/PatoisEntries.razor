<h3>Entrées dictionnaire</h3>

<div>
	<ul>
		@if (dictionaryEntries != null && dictionaryEntries.Any())
		{
			@foreach (var entry in dictionaryEntries)
			{
				<li>
					<strong>ID:</strong> @entry.Id <br />
					<strong>French Word:</strong> @entry.FrenchWord <br />
					<strong>Dialect Word:</strong> @entry.DialectWord <br />
					<strong>Example (French):</strong> @entry.FrenchExample <br />
					<strong>Example (Dialect):</strong> @entry.DialectExample <br />
				</li>
				<hr />
			}
