@page "/FlowRoles"
@using BlazingGidde.Client.Services
@using BlazingGidde.Client

@using BlazingGidde.Shared.Models.Identity
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using BlazingGidde.Client.Shared
@inject AspNetRoleManager RoleManager
@attribute [Authorize]

<PageTitle>Application roles</PageTitle>

<CustomGrid Tkey="string" TEntity="FlowRole" TCreateDto="FlowRole" TReadDto="FlowRole"
    Repository="@RoleManager">
    <GridColumns>
       <GridColumn TItem="FlowRole"  HeaderText="Id" PropertyName="Id">
                @context.Id
        </GridColumn>
        <GridColumn TItem="FlowRole" HeaderText="Employee Name" PropertyName="Name">
                @context.Name
        </GridColumn>
        <GridColumn TItem="FlowRole" HeaderText="Normalized Name" PropertyName="NormalizedName">
                @context.NormalizedName
        </GridColumn>
    </GridColumns>



    <EditFormTemplate Context="role">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" @bind="role.Name" />
        </div>

    </EditFormTemplate>
</CustomGrid>
