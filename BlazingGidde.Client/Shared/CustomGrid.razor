<h3>@Title</h3>

@typeparam TEntity
@typeparam Tkey
@typeparam TReadDto
@typeparam TCreateDto

<div class="mb-4">
    <div class="d-flex justify-content-between">
        <div>
        </div>
        <div>
            <Button Color="ButtonColor.Primary" Size="ButtonSize.Small" @onclick="OpenAddModal">
                <Icon Name="IconName.PlusCircle" Class="me-2" />Add @Title
            </Button>
        </div>
    </div>
</div>

<Grid TItem="TReadDto"  Unit="Unit.Px" DataProvider="DataProvider"
      Class="table table-hover table-bordered"

    AllowFiltering="true" AllowPaging="true" AllowSorting="true" Responsive="true" FixedHeader="true" AutoHidePaging="true">
    <GridColumns>
        <GridColumn Freeze="true" Filterable="false" TextAlignment="Alignment.Center" TItem="TReadDto" HeaderText="Actions">
            <ChildContent Context="item">
                <Button Color="ButtonColor.Secondary"  Outline="true" Size="ButtonSize.Small" Class="me-2"
                    @onclick="() => OpenEditModal(item)">
                    <Icon Name="IconName.Pencil" />
                </Button>
                <Button Color="ButtonColor.Danger" Outline="true" Size="ButtonSize.Small" @onclick="() => DeleteItem(item)">
                <Icon Name="IconName.Trash"/>
                </Button>
            </ChildContent>
        </GridColumn>
        @GridColumns
    </GridColumns>
</Grid>

<Modal @ref="modal" Title="@((isEditMode ? "Edit" : "Add") + " " + Title)" Size="ModalSize.Large"
    OnHide="CloseModal">
    <BodyTemplate>
        <EditForm Model="selectedItem" OnValidSubmit="SaveItem">
            <DataAnnotationsValidator />
            @EditFormTemplate(selectedItem)
            <div class="mt-3 d-flex justify-content-end">
                <Button Color="ButtonColor.Secondary" Variant="Outline" Class="me-2" @onclick="CloseModal">
                    <Icon Name="IconName.XCircle" Class="me-1" />Close
                </Button>
                <Button Color="ButtonColor.Primary" Variant="Outline" Type="ButtonType.Submit">
                    <Icon Name="IconName.Save" Class="me-1" />Save
                </Button>
            </div>
        </EditForm>
    </BodyTemplate>

</Modal>