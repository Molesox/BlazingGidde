@using BlazingGidde.Shared.DTOs.FlowCheck
@using BlazingGidde.Shared.DTOs.FlowCheck.Request
@inherits LayoutComponentBase
@layout MainLayout
@inject NavigationManager NavigationManager
@inject TemplateKindManager templateKindManager

<h3>@type.Name</h3>
<DxToastProvider Name="Overview"
MaxToastCount="5"
AnimationType="ToastAnimationType.Slide"
HorizontalAlignment="HorizontalAlignment.Center"
DisplayTime="TimeSpan.Zero"
Width="320px"/>
<DxStackLayout Orientation="Orientation.Vertical" CssClass="w-100 ch-480">
    <Items>
        <DxStackLayoutItem Length="auto">
            <Template>
                <DxFormLayout CaptionPosition="CaptionPosition.Vertical">
                    <DxFormLayoutItem ColSpanMd="6" Caption="Nombre">
                        <DxTextBox @bind-Text="kind.Name" />
                    </DxFormLayoutItem>
                    <DxFormLayoutItem ColSpanMd="3" Caption="Versión">
                        <DxSpinEdit @bind-Value="kind.Version" Enabled="false" />
                    </DxFormLayoutItem>
                    <DxFormLayoutItem ColSpanMd="3" Caption="Fecha">
                        <DxDateEdit @bind-Date="CreateDate" Enabled="false" />
                    </DxFormLayoutItem>
                    <DxFormLayoutItem ColSpanMd="6" Caption="Descripción del programa">
                        <DxTextBox @bind-Text="kind.ProgramDescription" />
                    </DxFormLayoutItem>
                    <DxFormLayoutItem ColSpanMd="3" Caption="Sección">
                        <DxTextBox @bind-Text="kind.Section" />
                    </DxFormLayoutItem>
                </DxFormLayout>
            </Template>
        </DxStackLayoutItem>
        <DxStackLayoutItem>
            <Template>
                <CascadingValue Value="this">
                    @Body
                </CascadingValue>
            </Template>
        </DxStackLayoutItem>
        <DxStackLayoutItem Length="auto">
            <Template>
                <div style="margin-bottom: 20px;">
                    <DxButton RenderStyle="ButtonRenderStyle.Secondary" Click="Cancel">
                        Cancelar
                    </DxButton>
                    <DxButton style="margin-left: 4px;" RenderStyle="ButtonRenderStyle.Primary" Click="Save">
                        Guardar
                    </DxButton>
                </div>
            </Template>
        </DxStackLayoutItem>
    </Items>
</DxStackLayout>

@code {
    [Parameter]
    public TemplateType type { get; set; } = new();

    private DateTime CreateDate { get; set; } = DateTime.UtcNow;

    protected CreateTemplateKindDto kind { get; set; } = new(){

    };

    public List<CreateCustomTemplateItemDto> Items { get; set; } = new();    


    protected override async Task OnInitializedAsync()
    {
        // Example defaults
        kind.Version = 1;

    }
    public void RegisterItems(List<CreateCustomTemplateItemDto> items)
    {
        Items = items; 
    }
    private void Cancel(MouseEventArgs e)
    {
        NavigationManager.NavigateTo("templates-type");
    }

    private async Task Save(MouseEventArgs e)
    {
        if(Items.Any()){
            kind.CustomTemplateItems = Items;
        }
        kind.TemplateTypeId = type.Id;
        kind.CustomTemplateItems.ToList().ForEach(it => it.Id = 0);
        await templateKindManager.Insert(kind);
    }
}
